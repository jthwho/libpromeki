#include <promeki/buildinfo.h>
#include <promeki/logger.h>

namespace promeki {

static const char *_buildType() {
#ifdef _MSC_VER
#   ifdef _DEBUG
    return "Debug";
#   else
    return "Release";
#   endif
#else
    return "@BUILD_INFO_TYPE@";
#endif

};

static const BuildInfo _buildInfo = {
    "@BUILD_INFO_NAME@",
    "@BUILD_INFO_VERSION@",
    "@BUILD_INFO_REPOIDENT@",
    "@BUILD_INFO_DATE@",
    "@BUILD_INFO_TIME@",
    "@BUILD_INFO_HOSTNAME@",
    _buildType(),
    @BUILD_INFO_VERSION_BETA@,
    @BUILD_INFO_VERSION_RC@
};

const BuildInfo *getBuildInfo() {
    return &_buildInfo;
}

void logBuildInfo() {
        promekiInfo("%s v%s {%s} [%s] (Built %s %s by %s)", 
                _buildInfo.name,
                _buildInfo.version,
                _buildInfo.repoident,
                _buildInfo.type,
                _buildInfo.date,
                _buildInfo.time,
                _buildInfo.hostname
        );
        return;
}

} // namespace promeki

